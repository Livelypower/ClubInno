{% extends 'base.html.twig' %}

{% block title %}Oublié Mot de Passe{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col m3"></div>
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Oublié mot de passe</span>
                    <div class="row">
                        {% if error %}
                            <div class="red-text">{{ error }}</div>
                        {% endif %}
                        {{ form_start(passwordForgottenForm, {'attr': {'class': 'white-text'}}) }}
                        {{ form_row(passwordForgottenForm.email, {'attr': {'class': 'white-text'}}) }}
                    </div>
                    <button class="btn green accent-4" type="submit">
                        Nouveau Mot de passe
                    </button>
                    {{ form_end(passwordForgottenForm) }}
                </div>
                <div class="card-action">
                    <a href="{{ path('app_login') }}" class="btn red accent-2">Annuler</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}