{% extends 'base.html.twig' %}

{% block title %}Tout votre applications{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Tout votre applications</span>
                    <div class="row">
                        {% for application in applications %}
                            <div class="col s12 white-text"><h5>Date: {{ application.date | date('d/m/y')}}</h5></div>
                            <div class="col s12 white-text">
                                <ul>
                                    {% for activity in application.activities %}
                                        <li><strong>{{ activity.name }}</strong></li>
                                        <ul>
                                            {% for tag in activity.tags %}
                                                <li><div class="chip">{{ tag.name }}</div></li>
                                            {% endfor %}
                                        </ul>
                                    {% endfor %}
                                </ul>
                            </div>
                            <div class="col s12 white-text" style="padding-bottom: 10px">
                                Lettre de motivation: <a href="{{ application.motivationLetterPath }}">lettre de motivation</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="card-action">
                    <a href="{{ path('home') }}" class="btn red accent-4">Annuler</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}