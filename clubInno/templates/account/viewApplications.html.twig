{% extends 'base.html.twig' %}

{% block title %}Toutes vos applications{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Toutes vos applications</span>
                    <div class="row">
                        {% for application in applications %}
                            <div class="col s12 white-text">
                                <h6>Date: {{ application.date | date('d/m/y')}}</h6>
                                <h6>Semester: {{ application.semester.startYear }}-{{ application.semester.endYear }}</h6>
                            </div>
                            <div class="col s12 white-text">
                                <ul>
                                    {% for activity in application.activities %}
                                        <li><strong>Activity:</strong> {{ activity.name }}</li>
                                        <ul>
                                            {% for tag in activity.tags %}
                                                <li><div class="chip">{{ tag.name }}</div></li>
                                            {% endfor %}
                                        </ul>
                                    {% endfor %}
                                </ul>
                            </div>
                            <div class="col s12 white-text" style="padding-bottom: 10px">
                                Lettre de motivation: <a href="{{ asset('uploads/' ~ application.motivationLetterPath) }}">lettre de motivation</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}