{% extends 'base.html.twig' %}

{% block title %}Détails de Compte{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col m3"></div>
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Changer des détails du Compte</span>
                        <div class="row">
                            {{ form_start(accountEditForm, {'attr': {'class': 'white-text'}}) }}
                            {{ form_row(accountEditForm.email, {'attr': {'class': 'white-text'}}) }}
                            {{ form_row(accountEditForm.firstname, {'attr': {'class': 'white-text'}}) }}
                            {{ form_row(accountEditForm.lastname, {'attr': {'class': 'white-text'}}) }}
                        </div>
                        <button class="btn green accent-4" type="submit">
                            Sauvegarder
                        </button>
                            {{ form_end(accountEditForm) }}
                        <a class="btn grey lighten-2 black-text" href="{{ path('changePassword') }}">Changer Mot de Passe</a>
                </div>
                <div class="card-action">
                    <a href="{{ path('home') }}" class="btn red accent-2">Annuler</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}