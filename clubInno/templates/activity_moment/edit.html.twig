{% extends 'base.html.twig' %}

{% block title %}Modifier moment{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Modifier le moment: {{ moment.name }}</span>
                    {{ form_start(form, {'attr': {'class': 'white-text', 'novalidate': 'novalidate'}}) }}
                    {{ form_row(form.name, {'attr': {'class': 'white-text'}}) }}
                    {{ form_row(form.location, {'attr': {'class': 'white-text'}}) }}
                    {{ form_row(form.description, {'attr': {'class': 'white-text'}}) }}
                    {{ form_row(form.activityGroups, {'attr': {'class': 'white-text'}}) }}
                    {{ form_row(form.startDate, {'attr': {'class': 'white-text datepicker firstDate'}}) }}
                    {{ form_row(form.startTime, {'attr': {'class': 'white-text timepicker'}}) }}
                    {{ form_row(form.endDate, {'attr': {'class': 'white-text datepicker secondDate'}}) }}
                    {{ form_row(form.endTime, {'attr': {'class': 'white-text timepicker'}}) }}
                    {{ form_row(form.activityGroups, {'attr': {'class': 'white-text'}}) }}
                    <div class="row">
                        <div class="col s12">
                            {{ form_widget(form.save, {'attr': {'class': 'btn green accent-4'}}) }}
                            <a class="btn red accent-2" href="{{ path('activity_moment') }}">Retourner</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/select.js') }}"></script>
{% endblock %}