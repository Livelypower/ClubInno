{% extends 'base.html.twig' %}

{% block title %}{{ activity.name }}{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="row">
        <div class="col s4"></div>
        <div class="col s6">
            <h3>{{ activity.name }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m9">
            <div class="card blue-grey darken-1">
                <div class="card-image">
                    {% if activity.mainImage is null %}
                        <img src="http://lorempixel.com/800/400/technics" alt="">
                    {% else %}
                        <img src="{{ asset('uploads/' ~ activity.mainImage) }}" alt="">
                    {% endif %}
                </div>
                <div class="card-content white-text">
                    <div class="row">

                        <div class="col s12">
                            {% if activity.tags is empty %}
                                <span class="orange-text text-lighten-2">Rien de tags</span>
                            {% else %}
                                {% for tag in activity.tags %}
                                    <div class="chip">
                                        {{ tag.name }}
                                    </div>
                                {% endfor %}
                            {% endif %}


                            <button class="btn green lighten-2 right" id="add">Ajouter au basket</button>
                        </div>
                    </div>

                    <p>Date limite d'inscription: {{ activity.registrationDeadline.format('d-m-Y') }}</p>
                    <h5>Description: </h5>
                    <p>
                        {{ activity.description }}
                    </p>
            </div>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Etudiants déja appliqué</span>
                    <p>5/{{ activity.maxAmountStudents }}</p>
                    <div class="card-action">
                        <ul>
                            <li><span class="orange-text text-lighten-2">Etudiant 1</span></li>
                            <li><span class="orange-text text-lighten-2">Etudiant 2</span></li>
                            <li><span class="orange-text text-lighten-2">Etudiant 3</span></li>
                            <li><span class="orange-text text-lighten-2">Etudiant 4</span></li>
                            <li><span class="orange-text text-lighten-2">Etudiant 5</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col s12">
            <a href="{{ path('activity') }}" class="btn red accent-2">Retourner</a>
        </div>
    </div>


{% endblock %}