{% extends 'base.html.twig' %}

{% block title %}Année active{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Indiquez quel année est l'année active</span>
                    <div class="row">
                        <div class="col s12 white-text">
                            <table>
                                <thead>
                                    <th>Année</th>
                                    <th>Action</th>
                                </thead>
                                <tbody>
                                {% for year in years %}
                                    <tr>
                                        <td>{{ year.stringified }}</td>
                                        <td><a href="{{ path('admin_set_active_semester', {'id': year.id}) }}" class="btn green accent-4">Active</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="col s12">
                            <a class="btn red accent-2" href="{{ path('admin_list_activities') }}" style="margin-top: 10px">Retourner</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}