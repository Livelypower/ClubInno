{% extends 'base.html.twig' %}

{% block title %}Modifier groupe{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('js/jquery-ui/jquery-ui.min.css') }}"/>
    <script type="text/javascript" src="{{ asset('js/jquery-ui/jquery-ui.min.js') }}"></script>
{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content" id="content">
                    <h3 class="white-text">Modification du groupe</h3>
                    <h4 class="white-text">Unassigned users:</h4>
                    <ul class="white-text" id="unassignedUsers">
                        <p>Drag here</p>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/select.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/assign.js') }}"></script>
{% endblock %}