{% extends 'base.html.twig' %}

{% block title %}Mise à jour Tag{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content">
                    <span class="card-title white-text">Mise à jour tag</span>
                    {{ form_start(form) }}
                    {{ form_row(form.name, {'attr': {'class': 'white-text'}}) }}
                    <div class="row">
                        <div class="col s12">
                            {{ form_widget(form.save, {'attr': {'class': 'btn green accent-4'}}) }}
                            <a class="btn red accent-2" href="{{ path('tag') }}">Retourner</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}