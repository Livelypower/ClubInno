{% extends 'base.html.twig' %}

{% block title %}All Blogposts{% endblock %}

{% block body %}
    {{ parent() }}
    <a href="{{ path("blog_new") }}" class="btn green accent-4">Nouveau BlogPost</a>

    <div class="row">
        <div class="col s12">
            <h4>Toutes les blogs</h4>
            <table>
                <thead>
                <th>Name</th>
                <th>Action</th>
                </thead>
                <tbody>
                {% for post in blogPosts %}
                    <tr>
                        <td>
                            <a href="{{ path('blog_show', {'id': post.id}) }}">{{ post.title }} by {{ post.user.firstname }} {{ post.user.lastname }} at {{ post.datetime | date('d/m/y H:i') }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}