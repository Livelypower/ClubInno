{% extends 'base.html.twig' %}

{% block title %}Modifier les fichiers{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="col s12">
                    <table>
                        <thead>
                        <th>Nom</th>
                        <th>Action</th>
                        </thead>
                        <tbody>
                        {% for file in files %}
                            <tr>
                                <td>
                                    <a href="{{ asset('uploads/' ~ file) }}" class="orange-text" download>{{ file }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('blog_file_delete', {'id': id, 'name': file}) }}"><i class="material-icons red-text text-accent-4">delete</i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="card blue-grey darken-1">
                        <div class="card-content">
                            <span class="card-title white-text">Ajouter des fichiers</span>
                            {{ form_start(form, {'attr': {'class': 'white-text', 'novalidate': 'novalidate'}}) }}
                            {{ form_row(form.files, {'attr': {'class': 'white-text'}}) }}
                            <div class="row">
                                <div class="col s12">
                                    {{ form_widget(form.save, {'attr': {'class': 'btn green accent-4'}}) }}
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <a class="btn red accent-2" href="{{ path('blog_edit') }}">Retourner</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/select.js') }}"></script>
{% endblock %}