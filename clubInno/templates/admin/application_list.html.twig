{% extends 'base.html.twig' %}

{% block title %}Toutes les applications{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="row">
        <div class="col s12">
            <a id="toggle-students-button" class="btn">Toggle registrated students</a>
            <a id="toggle-activities-button" class="btn">Toggle full activities</a>
        </div>
        <div class="col s12">
            <h4>Toutes les applications</h4>
            <table id="table" class="responsive-table">
                <thead>
                <tr id="tableHead">
                    <th>Etudiant</th>
                </tr>
                </thead>
                <tbody id="tableBody">
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="col s2">
                <button class="btn" id="saveConfig">Sauvegarder</button>
            </div>
            <div class="col s10">
                <p id="autosave-text" class="grey-text lighten-2"><i style="margin-right: 5px;" class="material-icons left">sync_disabled</i>Pas encore sauvegard√©</p>
            </div>
        </div>
    </div>

    <div id="users" data-users="{{ users|json_encode }}"></div>
    <div id="acties" data-acties="{{ activities|json_encode }}"></div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('js/divideActivities.js') }}">
    </script>

{% endblock %}