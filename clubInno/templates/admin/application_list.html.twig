{% extends 'base.html.twig' %}

{% block title %}Toutes les applications{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="row">
        <div class="row">
                <div class="col s6 m5 l4">
                    <h5>Des étudiants: </h5>
                    <a id="show-students-button" class="btn"><i class="material-icons">visibility</i></a>
                    <a id="hide-students-button" class="btn"><i class="material-icons">visibility_off</i></a>
                </div>
                <div class="col s6 m5 l4">
                    <h5>Des activités: </h5>
                    <a id="show-activities-button" class="btn"><i class="material-icons">visibility</i></a>
                    <a id="hide-activities-button" class="btn"><i class="material-icons">visibility_off</i></a>
                </div>
        </div>
        <div class="row">
            <div class="col s12">
                <a href="#" class="btn" id="hideFilters">Masquer les filtres</a>
                <form id="filterForm" action="#">
                    <ul>
                        <li>
                            <label>
                                <input type="checkbox" id="ownActivities" value="true" />
                                <span>Afficher seulement vos activités</span>
                            </label>
                        </li>
                    </ul>
                    <h5>Des tags</h5>
                    <ul id="filters">
                        {% for tag in tags %}
                            <li>
                                <label>
                                    <input type="checkbox" id="{{ tag.name }}" value="{{ tag.name }}" />
                                    <span>{{ tag.name }}</span>
                                </label>
                            </li>
                        {% endfor %}
                    </ul>
                    <h5>Des orientations</h5>
                    <ul id="orientations">
                        {% for ori in orientations %}
                            <li>
                                <label>
                                    <input type="checkbox" id="{{ ori }}" value="{{ ori }}" />
                                    <span>{{ ori }}</span>
                                </label>
                            </li>
                        {% endfor %}
                    </ul>
                    <a href="#" class="btn grey lighten-1" id="filterActivities">Filtrer</a>
                </form>
                <a href="#" class="btn" id="showFilters">Afficher les filtres</a>
            </div>
        </div>
        <div class="col s12">
            <h4>Toutes les applications</h4>
            <table id="table" class="responsive-table">
                <thead>
                <tr id="tableHead">
                    <th>Etudiant</th>
                </tr>
                </thead>
                <tbody id="tableBody">
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="col s2">
                <button class="btn" id="saveConfig">Sauvegarder</button>
            </div>
            <div class="col s10">
                <p id="autosave-text" class="grey-text lighten-2"><i style="margin-right: 5px;" class="material-icons left">sync_disabled</i>Pas encore sauvegardé</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="error-text" class="col s12 m12 l6 red-text text-darken-3">

        </div>
    </div>
    <div id="data" hidden>{{ apiToken }}</div>
    <div id="userid" hidden>{{ app.user.id }}</div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('js/divideActivities.js') }}">
    </script>

{% endblock %}