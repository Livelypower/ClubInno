{% extends 'base.html.twig' %}

{% block title %}All Activities{% endblock %}

{% block body %}
    {{ parent() }}
    <a href="{{ path("activity_new") }}" class="btn">Nouvelle Activité</a>

    <div class="row">
        <div class="col s12">
            <h4>Toutes les activités</h4>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <form action="#">
                {% for tag in tags %}
                <p>
                    <label>
                        <input type="checkbox" id="{{ tag.name }}" value="{{ tag.name }}" />
                        <span>{{ tag.name }}</span>
                    </label>
                </p>
                {% endfor %}
                <a href="#" class="btn" id="filterActivities">Filter</a>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col s12" id="activities">

        </div>
    </div>

    <div id="data" hidden>{{ apiToken }}</div>

{% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset('js/select.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/filterActivities.js') }}"></script>
    {% endblock %}